{
  "manifest_version": 3,
  "name": "Infojobs Assistant",
  "version": "1.0",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "identity",
    "webNavigation"
  ],
  "host_permissions": [
    "https://www.infojobs.net/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["contentScript.js"]
    }
  ]
}
